@font-face
    font-family 'IntroBook'
    font-weight 400
    src url('../fonts/IntroBook/IntroBook.woff') format('woff')

@font-face
    font-family 'IntroBookBold'
    font-weight 400
    src url('../fonts/IntroBook/IntroBold.woff') format('woff')

html
  -webkit-text-size-adjust none
  min-height 100%

body
  font-size 13px
  line-height 16px
  min-width 1000px
  min-height 100%
  background #e0e0e0
  background-size 256px 256px

body, input, textarea
  font-family 'IntroBook'

input, textarea
  +placeholder()
    font-weight 300

*:focus
  outline none

a
  transition color 0.2s
  text-decoration none


.base_col
  width 1000px
  margin 0 auto
  clearfix()

.base_col--large
  width 1100px
  margin 0 auto
  clearfix()

.base_col--small
  width 870px
  margin 0 auto
  clearfix()

.base_full_col
  width 100%
  min-width 1000px
  padding 0 60px
  box-sizing border-box
  margin 0 auto

label
  cursor pointer

strong, b
  font-family 'IntroBookBold'

#overlay
  background rgba(0,0,0, 0.7)
  position fixed
  z-index 9998
  top 0
  left 0
  width 100%
  height 100%

.-hide
  display none

.-mobile
  display none !important

input[type="search"]
  -webkit-appearance textfield

