.question
  clearfix()

  .question--aside
    width 250px
    margin-right 60px
    padding-top 65px
    float left

    > ul > li
      border-bottom 1px solid #ceeaee

      ul
        padding-bottom 24px
        margin-top -18px
        display none

        li
          a
            display block
            padding 8px 0

            &.-active
              color #000

      &.-active
        // ul
        //   display block

        h2
          a
            color #4A4A4A

    h2
      a
        display block
        font-family 'IntroBookBold'
        font-size 22px
        color #2379FF
        line-height 32px
        padding 28px 0 24px

        &:hover
          color #4A4A4A

    a
      color #676E89
      font-size 16px
      line-height 20px

      &:hover, &.-active
        color #000

  .question--content
    width 670px
    float left
    font-size 16px
    color #000
    line-height 22px
    padding-bottom 80px

    .headline1
      color #000
      padding-bottom 24px

    h2
      font-family 'IntroBookBold'
      font-size 20px
      color #080340
      line-height 32px
      padding-bottom 18px

    p
      padding-bottom 12px

    ul
      padding-top 16px
      padding-bottom 12px

      li
        font-size 16px
        position relative
        padding-left 20px
        padding-bottom 18px

        &:before
          content ''
          position absolute
          left 0
          top 6px
          width 6px
          height 6px
          background #676e89
          border-radius 50%

    .question--item
      border-bottom 1px solid #ceeaee
      padding-bottom 20px
      margin-bottom 30px

      &:last-child
        border-bottom none

      .question--images
        img
          display inline-block
          margin-right 15px

          &:last-child
            margin-right 0

      ol
        padding 12px 0 30px 40px

        li
          list-style decimal
          line-height 30px

      a
        color #2379FF

        &:hover
          color #000

.helpfull
  border-radius 10px
  border 1px solid #D9D9D9
  padding 36px 30px 22px
  margin-top 6px
  margin-bottom 26px
  borderbox()
  clearfix()

  h2
    float left
    padding-top 6px

  p
    float right

@media (max-width 1140px)
  .question
    .base_col
      width 100%
      padding-left 64px

    .question--aside
      width 210px
      margin-right 35px

      h2 a
        font-size 20px
