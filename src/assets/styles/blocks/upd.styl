.question--images__wrap {
  position: relative;
}
.question--images__btn{
  width: 25px;
  height: 25px;
  border-radius: 50%;
  background-color: transparent;
  border: none;
  outline: none;
  position: absolute;
  top: -30px;
  right: 0;
  display: none;
  cursor: pointer;
  // margin-right: -623px;
  z-index: 10000;
  transition: opacity 0.4s ease;
}
.question--images__btn:before {
  content: "";
  position: absolute;
  top: 10px;
  left: 0;
  width: 100%;
  height: 2px;
  transform: rotate(45deg);
  background-color: #000;
  opacity: 0.6;
  transition: opacity 0.4s ease;
}
.question--images__btn:after {
  content: "";
  position: absolute;
  top: 10px;
  left: 0;
  width: 100%;
  height: 2px;
  transform: rotate(-45deg);
  background-color: #000;
  opacity: 0.6;
  transition: opacity 0.4s ease;
}
.question--images__btn:hover:before,
.question--images__btn:hover:after {
  opacity: 1;
}

