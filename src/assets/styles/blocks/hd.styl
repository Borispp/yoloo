@media (max-width 767px)

  .hd .hd--image
    position absolute
    top 0px
    left 50%
    transform translate(-50%, -70px) scale(0.6)

  .hd .hd--description
    width 100%
    text-align center
    margin-top 200px

  .hd
    width calc(100% - 24px)
    padding-bottom 30px

    .hd--description
      h2
        font-size 36px
        line-height 42px
        padding-bottom 18px

      p
        font-size 14px
        padding 0 12px
        line-height 26px
        width 100%
        borderbox()

  .howitworks
    padding 36px 2px 0

    h2
      font-size 36px !important
      line-height 42px !important
      padding-bottom 40px

      br
        display inline-block

    ul li
      transform scale(1)
      text-align left
      padding-top 18px
      background-position 0 0 !important
      padding-left 100px
      box-sizing border-box
      padding-top 0
      border-bottom 1px solid #c1e1e6
      padding-bottom 30px
      width calc(100% - 10px)
      min-height 140px
      margin 0 10px 36px

      &:last-child
        border-bottom none
        margin-bottom 0
        padding-bottom 0

      &:before
        position absolute
        transform scale(0.6)

      .howitworks--num
        left 0
        transform none
        background-size 66px 111px !important

      &.howitworks--download_app
        &:before
          top 12px
          left 24px

      &.howitworks--create_account
        &:before
          top 20px
          left 0px

      &.howitworks--get_credit
        &:before
          top 20px
          left -6px

      h3, p
        transform scale(1)

      h3
        padding-top 0
        font-size 14px
        font-family 'IntroBookBold'
        padding-bottom 12px

      p
        font-size 14px
