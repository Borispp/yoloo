.hd
  border-bottom 1px solid #c0e1e7
  padding-top 40px
  padding-bottom 60px
  width 860px
  margin 0 auto
  clearfix()

  .hd--description
    float left
    width 450px

    h2
      font-family 'Open Sans Condensed'
      font-size 62px
      color #000
      line-height 72px
      padding-bottom 30px

    p
      font-size 18px
      color #758188
      line-height 30px

  .hd--image
    float right
    width 336px
    position relative
    top 40px

.howitworks
  padding 72px 0 0

  h2
    font-family 'Open Sans Condensed'
    font-size 54px
    color #080340
    line-height 72px
    text-align center
    padding-bottom 70px

  ul
    li
      display inline-block
      position relative
      width 290px
      // padding-top 130px
      padding-bottom 40px
      margin 0 20px
      text-align center

      &:before
        content ''
        display block
        margin 0 auto 30px
        position relative
        z-index 1
        left 6px

      .howitworks--num
        display block
        position absolute
        top 0
        left 50%
        transform translate(-60%, -30px)
        z-index 0

      h3
        font-family 'IntroBookBold'
        font-weight 600
        font-size 24px
        color #080340
        padding-bottom 20px
        position relative
        z-index 1

      p
        font-size 16px
        color #758188
        line-height 24px
        position relative
        z-index 1

      &.howitworks--download_app

        .howitworks--num
          background url('../images/content/1.png') no-repeat
          background-size 163px 278px
          width 163px
          height 278px

        &:before
          sprite($s-download_app)
        // background url('../images/content/download_app.jpg') no-repeat 30px 0
        // background-size 164px 279px

      &.howitworks--create_account
        .howitworks--num
          background url('../images/content/2.png') no-repeat
          background-size 206px 283px
          width 206px
          height 283px

        &:before
          sprite($s-create_account)
        // background url('../images/content/create_account.jpg') no-repeat 30px 0
        // background-size 206px 283px

      &.howitworks--get_credit
        .howitworks--num
          background url('../images/content/3.png') no-repeat
          background-size 200px 287px
          width 200px
          height 287px

        &:before
          sprite($s-get_credit)
        // background url('../images/content/get_credit.jpg') no-repeat 30px 0
        // background-size 200px 287px

