.rates
  clearfix()

  .rates--check
    float right
    margin-top 30px
    width 250px
    vertical-align top
    clearfix()

    h3
      font-weight 600
      font-size 21px
      color #FFFFFF
      letter-spacing 1px
      line-height 25px
      width 170px
      text-align left
      float right

    h2
      font-family 'Open Sans Condensed'
      font-size 68px
      color #FFF
      line-height 69px
      padding 12px 0 18px
      clear both

    .label
      padding-bottom 16px

    .-searchCountries
      margin-top -8px
      background transparent
      color #fff
      border-color #95E7FF

  .rates--form
    font-size 16px
    color #AEC4FF
    line-height 22px

    .form--search
      padding 18px 0 0

    .rates--form--text
      padding 24px 0 24px

    .input
      width 250px

.rates--countries
  float left
  vertical-align top

  ul
    li
      padding-top 31px
      padding-left 24px
      padding-right 70px
      display inline-block
      vertical-align top

      &:last-child
        padding-right 0

      &:first-child
        padding-top 0

      img
        margin-left -24px

      .rates--globe_img
        height 150px

      h2
        font-family 'Open Sans Condensed'
        width 130px
        font-size 34px
        color #95E7FF
        line-height 35px
        padding-top 12px
        padding-bottom 0

        a
          color #95E7FF
          text-decoration none

          &:after
            content ''
            display block
            width 70px
            height 1px
            background #95E7FF
            margin 16px 0 2px

          &:hover
            color #ff5d61

            &:after
              background #de4839


      dl
        dt
          display inline-block
          padding-top 24px
          font-weight 600
          font-size 16px
          color #FFFFFF
          line-height 22px

        dd
          font-family 'Open Sans Condensed'
          font-size 72px
          color #FFFFFF
          letter-spacing 0px
          line-height 78px

.rates_header
  text-align center
  padding-bottom 20px

  .searchCountries
    width 100%
    margin 0 auto
    max-width 550px
    text-align left

    input
      background none
      color #fff

      +placeholder()
        font-size 16px
        color #FFF


.top_countries
  text-align center
  width 1000px
  margin 0 auto
  clearfix()

  h2
    font-size 68px
    margin-bottom 52px

  .rates--countries
    float none
    width 100%
    margin-left 0

    ul
      li
        padding 0
        width 300px

        h2
          width 100%
          text-align center
          margin-bottom 0

          a
            &:after
              margin 16px auto

        dl
          margin-top -18px

  .countriesCatalog
    padding-top 80px

    .countriesCatalog--alphabet
      li
        display inline-block

        a
          font-family 'Open Sans Condensed'
          font-size 52px
          font-weight 300
          padding 0 8px
          color #95E7FF

          &:hover
            color #fff

    .countriesCatalog--list
      margin-left 36px
      font-size 0
      padding-top 10px

      .countriesCatalog--collumn
        width 25%
        display inline-block
        vertical-align top
        font-size 16px

        ul
          padding-top 30px
          opacity 1
          transition opacity 0.2s

          &.-fade
            opacity 0.3

          &:hover
            opacity 1


          li
            text-align left
            position relative
            width 70%

            a
              display block
              font-size 16px
              color #FFF
              padding 3px 0
              line-height 22px
              transition opacity 0.2s

              &:hover
                opacity 0.7

            h3
              position absolute
              left -40px
              margin-top 2px
              font-family 'Open Sans Condensed'
              font-weight 300
              font-size 42px
              color #95E7FF

@media (max-width 1260px)
  .rates--countries
    margin-left 60px

    ul li
      padding-right 40px

      h2
        font-size 30px

      dl dd
        font-size 66px

  .rates--check
    margin-right 60px

  .top_countries .countriesCatalog .countriesCatalog--list
    margin-left 80px

