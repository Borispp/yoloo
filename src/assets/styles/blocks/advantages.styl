@media (max-width 767px)
  .-with_mobile
    .advantages .advantages--solar
      position absolute
      top 200px
      left 50%
      transform translate(-50%, -50%) scale(.8)
      float none

    .advantages .advantages--description h1
      text-align center
      margin-top 350px

    .advantages
      margin-top -40px

      .advantages--solar
        width 330px
        top 110px

      .advantages--description
        padding-top 1px
        width 100%
        padding-left 0
        text-align center

        h1
          margin-top 250px
          font-size 36px
          line-height 42px
          padding-bottom 18px

        p
          font-size 15px
          line-height 24px
          padding 0 12px

      .advantages--list
        width 100%
        padding-top 30px
        margin-bottom -20px

        li
          width calc(100% - 24px) !important
          margin-right 0 !important
          padding-top 4px !important
          padding-bottom 30px
          margin 0 12px 30px !important
          border-bottom 1px solid #c1e1e6
          text-align center

          &:last-child
            border-bottom none
            padding-bottom 0
            margin-bottom 0

          h3
            font-size 16px

          .icon
            margin 0 auto 20px

          p
            font-size 15px
            line-height 20px
            padding 0 36px
