.advantages
  clearfix()

  .advantages--description
    width 410px
    padding-top 50px
    padding-left 90px
    float left

    h1
      font-family 'Open Sans Condensed'
      font-size 62px
      color #000
      line-height 72px
      padding-bottom 24px

    p
      font-size 18px
      color #758188
      line-height 30px

  .advantages--solar
    width 495px
    float right

  .advantages--list
    clear both

    li
      display inline-block
      font-size 16px
      color #09073F
      line-height 22px
      width 220px
      margin-right 35px
      margin-top -18px
      vertical-align top

      &:last-child
        margin-right 0

      .icon
        margin-bottom 40px

      &:nth-child(2)
        padding-top 40px

      &:nth-child(3)
        padding-top 50px

      &:nth-child(4)
        padding-top 115px

      h3
        font-family 'IntroBookBold'
        font-size 18px
        color #080340
        letter-spacing -1px
        padding-bottom 10px

