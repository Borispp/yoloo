.popup_active
  overflow hidden

#overlay
  background rgba(36,55,79, 0.6)
  position fixed
  z-index 9998
  top 0
  left 0
  width 100%
  height 100%

.closePopup
  position absolute
  top 20px
  right 20px
  sprite($s-icon-close)
  cursor pointer
  opacity 0.5
  transition opacity 0.25s

  &:hover
    opacity 1

.popup
  position fixed
  top 0
  left 0
  width 100%
  height 100%
  z-index 9999
  transform translate(0,0)
  transition transform 0.5s

  &.-hidePopup
    transform translate(-150%, 0)

  &.-hidePopupTop
    transform translate(0, -100%)

